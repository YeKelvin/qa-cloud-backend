{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONIOENCODING": "UTF8"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "module": "flask",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONIOENCODING": "UTF8"
            },
            "args": [
                "run",
                "--no-reload"
            ]
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-sv",
                "--disable-pytest-warnings",
                "--html=report.html"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONIOENCODING": "UTF8"
            }
        }
    ]
}
