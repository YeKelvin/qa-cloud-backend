{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": true,
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "module": "flask",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--host", "0.0.0.0",
                "--port", "5000"
            ],
            "jinja": true
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "console": "internalConsole",
            "module": "pytest",
            "args": [
                "-sv",
                "--disable-pytest-warnings",
                "--html=report.html"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}