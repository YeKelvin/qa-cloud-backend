{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "module": "flask",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                // "FLASK_APP": "main:app",
                // "FLASK_ENV": "development",
                // "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-reload",
                // "--host", "0.0.0.0",
                // "--port", "5000"
            ]
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "module": "pytest",
            "justMyCode": false,
            "args": [
                "-sv",
                "--disable-pytest-warnings",
                "--html=report.html"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
